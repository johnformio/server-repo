{
  "Comment": "Add a recordset to route53 to point to <ENVIRONMENT>.form.io",
  "Changes": [
    {
      "Action": "UPSERT",
      "ResourceRecordSet": {
        "Name": "<ENVIRONMENT>.test-form.io.",
        "Type": "A",
        "AliasTarget": {
          "HostedZoneId": "<ALIAS_ZONE>",
          "DNSName": "<DNS_NAME>",
          "EvaluateTargetHealth": true
        }
      }
    },
    {
      "Action": "UPSERT",
      "ResourceRecordSet": {
        "Name": "*.<ENVIRONMENT>.test-form.io.",
        "Type": "A",
        "AliasTarget": {
          "HostedZoneId": "<ALIAS_ZONE>",
          "DNSName": "<DNS_NAME>",
          "EvaluateTargetHealth": true
        }
      }
    }
  ]
}

