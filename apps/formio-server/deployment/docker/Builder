FROM node:12-alpine
MAINTAINER Form.io <support@form.io>

COPY ./build /src
WORKDIR /src

RUN apk update && \
    apk upgrade && \
    apk add --no-cache --virtual .build-deps bash git make gcc g++ python openssh-client && \
    rm -rf /var/lib/apt/lists/* && \
    rm /var/cache/apk/*

# Add deployment key
RUN mkdir /root/.ssh/ && ssh-keyscan github.com >> /root/.ssh/known_hosts
ADD id_rsa /root/.ssh/id_rsa
RUN chmod 600 /root/.ssh/id_rsa
RUN npm config set python /usr/bin/python
RUN npm i -g npm npm-cli-login
RUN npm-cli-login -u $NPM_USERNAME -p $NPM_PASSWORD -e $NPM_EMAIL --registry https://pkg.form.io
RUN npm ci --production

EXPOSE      80
ENTRYPOINT  ["node", "formio.js --max_old_space_size=4096"]
