{
  "title": "Formio",
  "version": "2.0.0",
  "description": "The admin project template for docker installs.",
  "name": "formio",
  "primary": true,
  "roles": {
    "administrator": {
      "title": "Administrator",
      "description": "A role for Administrative Users.",
      "admin": true,
      "default": false
    },
    "authenticated": {
      "title": "Authenticated",
      "description": "A role for Authenticated Users.",
      "admin": false,
      "default": false
    },
    "anonymous": {
      "title": "Anonymous",
      "description": "A role for Anonymous Users.",
      "admin": false,
      "default": true
    }
  },
  "forms": {
    "userLogin": {
      "title": "User Login",
      "type": "form",
      "name": "userLogin",
      "path": "user/login",
      "display": "form",
      "tags": [],
      "components": [
        {
          "validate": {
            "required": true
          },
          "type": "email",
          "persistent": true,
          "unique": false,
          "protected": false,
          "placeholder": "Enter your email address",
          "key": "email",
          "label": "Email",
          "inputType": "email",
          "tableView": true,
          "input": true
        },
        {
          "validate": {
            "required": true
          },
          "type": "password",
          "persistent": true,
          "protected": true,
          "placeholder": "Enter your password",
          "key": "password",
          "label": "Password",
          "inputType": "password",
          "tableView": false,
          "input": true
        },
        {
          "type": "button",
          "theme": "primary",
          "disableOnInvalid": true,
          "action": "submit",
          "block": false,
          "rightIcon": "",
          "leftIcon": "",
          "size": "md",
          "key": "submit",
          "tableView": false,
          "label": "Submit",
          "input": true
        }
      ],
      "access": [
        {
          "type": "read_all",
          "roles": [
            "anonymous"
          ]
        }
      ],
      "submissionAccess": []
    }
  },
  "actions": {
    "userSave": {
      "title": "Save Submission",
      "name": "save",
      "form": "user",
      "priority": 10,
      "method": [
        "create",
        "update"
      ],
      "handler": [
        "before"
      ]
    },
    "userRole": {
      "title": "Role Assignment",
      "name": "role",
      "form": "user",
      "settings": {
        "role": "administrator",
        "type": "add",
        "association": "existing"
      },
      "priority": 1,
      "method": [
        "create"
      ],
      "handler": [
        "after"
      ]
    },
    "userLoginLogin": {
      "title": "Login",
      "name": "login",
      "form": "userLogin",
      "settings": {
        "password": "password",
        "username": "email",
        "resources": [
          "user"
        ]
      },
      "priority": 2,
      "method": [
        "create"
      ],
      "handler": [
        "before"
      ]
    }
  },
  "resources": {
    "user": {
      "title": "User",
      "type": "resource",
      "name": "user",
      "path": "user",
      "display": "form",
      "tags": [],
      "components": [
        {
          "validate": {
            "required": true
          },
          "type": "email",
          "persistent": true,
          "unique": false,
          "protected": false,
          "defaultValue": "",
          "suffix": "",
          "prefix": "",
          "placeholder": "Enter your email address",
          "key": "email",
          "label": "Email",
          "inputType": "email",
          "tableView": true,
          "input": true
        },
        {
          "validate": {
            "required": true
          },
          "type": "password",
          "persistent": true,
          "protected": true,
          "suffix": "",
          "prefix": "",
          "placeholder": "Enter your password",
          "key": "password",
          "label": "Password",
          "inputType": "password",
          "tableView": false,
          "input": true
        },
        {
          "type": "button",
          "theme": "primary",
          "disableOnInvalid": true,
          "action": "submit",
          "block": false,
          "rightIcon": "",
          "leftIcon": "",
          "size": "md",
          "key": "submit",
          "tableView": false,
          "label": "Submit",
          "input": true
        }
      ],
      "access": [
        {
          "type": "read_all",
          "roles": [
            "administrator",
            "authenticated",
            "anonymous"
          ]
        }
      ],
      "submissionAccess": [
        {
          "type": "create_all",
          "roles": [
            "administrator"
          ]
        },
        {
          "type": "read_all",
          "roles": [
            "administrator"
          ]
        },
        {
          "type": "update_all",
          "roles": [
            "administrator"
          ]
        },
        {
          "type": "delete_all",
          "roles": [
            "administrator"
          ]
        },
        {
          "type": "create_own",
          "roles": []
        },
        {
          "type": "read_own",
          "roles": []
        },
        {
          "type": "update_own",
          "roles": []
        },
        {
          "type": "delete_own",
          "roles": []
        },
        {
          "type": "self",
          "roles": []
        }
      ]
    }
  }
}
