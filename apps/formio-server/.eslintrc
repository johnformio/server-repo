{
  "root": true,
  "extends": "./node_modules/eslint-config-formio/index.js",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "curly": [2, "all"],
    "no-unused-vars": [1, {"args": "none", "ignoreRestSiblings": true}],
    "strict": [2, "global"],
    "max-statements": "off",
    "max-len": [0],
    "no-prototype-builtins": 0,
    "quotes": [0],
    "prefer-const": "error",
    "prefer-template": "error",
    "max-depth": ["error", 4],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
