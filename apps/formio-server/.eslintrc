{
  "root": true,
  "extends": "./node_modules/eslint-config-formio/index.js",
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "curly": [2, "all"],
    "no-unused-vars": [1, {"args": "none"}],
    "strict": [2, "global"],
    "max-statements": [1, 30, {"ignoreTopLevelFunctions": true}],
    "quotes": [0],
    "prefer-const": "error",
    "prefer-template": "error"
  }
}
